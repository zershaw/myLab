<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cbsys.saleexplore.idao.IEmailPwdVeriDAO">

    <select id="get" resultType="com.cbsys.saleexplore.entity.EmailPwdVCode">
        SELECT *
        FROM T_EMAIL_PWD_VERI
        WHERE email = #{email}
    </select>


    <insert id="insert" parameterType="com.cbsys.saleexplore.entity.EmailPwdVCode">
        INSERT INTO T_EMAIL_PWD_VERI (email,
                                      veriCode,
                                      createdTime)
        VALUES (#{vCode.email},
                #{vCode.veriCode},
                #{vCode.createdTime})
        ON DUPLICATE KEY UPDATE veriCode=#{vCode.veriCode},
                                createdTime=#{vCode.createdTime}
    </insert>

    <delete id="delete">
        DELETE
        FROM T_EMAIL_PWD_VERI
        where email = #{email}
    </delete>

</mapper>