<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- 满足SQLsession的调用 -->
<!-- 该mapper配置文件起到了接口实现类的作用，namespace绑定一个对应的Dao/Mapper接口 -->
<mapper namespace="com.czx.mapper.UserMapper">
    <select id="getUserList" resultType="com.czx.pojo.User">
        select * from user
    </select>

    <insert id="addUser" parameterType="com.czx.pojo.User">
    insert into user (id,name,pwd) values (#{id},#{name},#{pwd})
    </insert>

    <select id="selectUserById" resultType="com.czx.pojo.User">
         select * from user where id = #{id}
    </select>

    <select id="selectUserByMap" parameterType="map" resultType="com.czx.pojo.User">
         select * from user where name = #{username} and pwd = #{pwd}
    </select>

    <select id="getUserLike" resultType="com.czx.pojo.User">
         select * from user where name like #{username} and pwd = #{pwd}
    </select>
</mapper>